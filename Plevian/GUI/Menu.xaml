<UserControl x:Class="Plevian.GUI.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="40">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                <GradientStop Color="#ff33ff" Offset="0"/>
                <GradientStop Color="#bd6ebf" Offset="0.5"/>
                <GradientStop Color="#ff33ff" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="1" Source="/GFX/Menu/village-on.png"/>
        <Image Grid.Row="2" Source="/GFX/Menu/technologies-off.png"/>
        <Image Grid.Row="3" Source="/GFX/Menu/mail-off.png"/>
        <Image Grid.Row="4" Source="/GFX/Menu/world-off.png"/>
        <Image Grid.Row="5" Source="/GFX/Menu/settings-off.png"/>
    </Grid>
</UserControl>
