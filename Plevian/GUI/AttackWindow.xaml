<Window x:Class="Plevian.GUI.AttackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AttackWindow" Height="556" Width="536" Closed="onWindowClose">
    <Grid Margin="5,2" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0"  CanContentScroll="True" Background="#FFE4E4E4">
            <StackPanel Name="VillagePanel"  />
        </ScrollViewer>

        <ScrollViewer Grid.Row="1"  CanContentScroll="True" Background="#FFE4E4E4" Margin="0,25,0,0">
            <StackPanel Name="UnitPanel" />
        </ScrollViewer>
        
        <Button Grid.Row="2" x:Name="SendButton" Content="Send!!!" VerticalContentAlignment="Center" Margin="0,5,0,2" Padding="10,1,11,1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="sendArmy" />
        

    </Grid>
 
</Window>
