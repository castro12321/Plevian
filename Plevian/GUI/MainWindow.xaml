<Window x:Class="Plevian.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:map="clr-namespace:Plevian.Maps"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TabControl Name="MainWindowTabs" Background="Green" Padding="0" Grid.Row="0">
            <TabItem Name="mapTabItem" Header="Mapa">
                <!-- Moved to custom control. Created in constructor -->
            </TabItem>
            <TabItem Name="villageTabItem" Header="Wioska">
                <!-- Moved to custom control. Created in constructor -->
            </TabItem>
            <TabItem Name="messagesTabItem" Header="Wiadomości">
                <!-- Moved to custom control. Created in constructor -->
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <TextBlock Name="statusText" Text=""></TextBlock>
        </StatusBar>
    </Grid>
    
    
</Window>
